.title{
  text-align: center
}
.navbar-group{
  display: flex;
  justify-content: space-around
}
.active {
   border-bottom: 5px solid lightseagreen;
   color: lightseagreen
}
.navbar-cell{
  flex: 1;
  padding: .5rem;
  text-align: center;
}
.navbar-cell:hover{
  border-bottom: 5px solid lightseagreen
}
.row{
  display: flex;
  align-items: center;
  border-top: 1px solid #ddd;
}
.detail text{
  display: block;
  padding: 1rem .5rem
}
.basis{
  flex: 1;
  padding: 1rem .5rem;
  overflow: hidden
}
.salary{
  flex: 1;
  padding: .5rem;
  overflow: hidden
}
.beforeSalary,
.beforeBasis {
  width: 5em;
  padding-left:.5rem
}
.pull-right{
  padding:.5rem 1.5rem;
  text-align: right;
  border-top: 1px solid #ddd;
  font-size: 14px;
  color:#999
}
